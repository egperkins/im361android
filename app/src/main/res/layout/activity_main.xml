<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <android.support.v7.widget.Toolbar
            android:layout_width="411dp"
            android:layout_height="57dp"
            android:background="@color/colorPrimaryDark"
            android:theme="?attr/actionBarTheme"
            android:minHeight="0dp"
            android:id="@+id/toolbar" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:elevation="0dp"/>
    <TextView
            android:text="Connected Home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:layout_editor_absoluteX="74dp" android:id="@+id/textView"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            app:layout_constraintTop_toTopOf="@+id/toolbar" app:layout_constraintBottom_toBottomOf="@+id/toolbar"
            app:layout_constraintVertical_bias="1.0" android:textColor="@android:color/white"/>
    <ProgressBar
            style="@android:style/Widget.DeviceDefault.Light.ProgressBar.Horizontal"
            android:layout_width="206dp"
            android:layout_height="44dp"
            tools:layout_editor_absoluteY="220dp" tools:layout_editor_absoluteX="102dp" android:id="@+id/progressBar"
            android:max="10" android:progress="3" android:progressTint="@android:color/holo_blue_bright"/>
    <ProgressBar
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="206dp"
            android:layout_height="44dp"
            tools:layout_editor_absoluteY="323dp" tools:layout_editor_absoluteX="102dp" android:id="@+id/progressBar2"
            android:visibility="visible" android:max="10" android:progress="5"
            android:progressTint="@android:color/holo_blue_bright"/>
    <ProgressBar
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="206dp"
            android:layout_height="44dp"
            tools:layout_editor_absoluteY="421dp" tools:layout_editor_absoluteX="102dp" android:id="@+id/progressBar3"
            android:progressTint="@android:color/holo_blue_bright" android:max="10" android:progress="7"/>
    <TextView
            android:text="Family's Task Progression"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" tools:layout_editor_absoluteY="83dp"
            tools:layout_editor_absoluteX="122dp" android:id="@+id/textView2"/>
    <TextView
            android:text="Emma - 3 of 10 Tasks"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" tools:layout_editor_absoluteY="200dp"
            tools:layout_editor_absoluteX="102dp" android:id="@+id/textView3"/>
    <TextView
            android:text="John - 5 of 10 Tasks"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" tools:layout_editor_absoluteY="304dp"
            tools:layout_editor_absoluteX="102dp" android:id="@+id/textView5"/>
    <TextView
            android:text="Sammie - 7 of 10 Tasks"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" tools:layout_editor_absoluteY="402dp"
            tools:layout_editor_absoluteX="102dp" android:id="@+id/textView4"/>
    <Button
            android:text="New Task"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" tools:layout_editor_absoluteY="556dp"
            tools:layout_editor_absoluteX="74dp" android:id="@+id/button" android:elevation="0dp"
    />
    <Button
            android:text="View Tasks"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" tools:layout_editor_absoluteY="556dp"
            tools:layout_editor_absoluteX="218dp" android:id="@+id/button2"/>

</android.support.constraint.ConstraintLayout>