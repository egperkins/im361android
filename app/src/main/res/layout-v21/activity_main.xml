<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <Button
            android:text="@string/add_task"
            android:layout_width="106dp"
            android:layout_height="111dp"
            android:id="@+id/button" android:textColor="@color/colorBackground"
            android:background="@color/colorAccent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginBottom="32dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.82"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.86"/>
    <Button
            android:text="@string/view_tasks"
            android:layout_width="106dp"
            android:layout_height="111dp"
            android:id="@+id/button2" android:textColor="@color/colorBackground"
            android:background="@color/colorAccent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginBottom="32dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.266"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.86"/>
    <TextView
            android:text="@string/sammie"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Child1" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginTop="108dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintHorizontal_bias="0.025"
            android:textSize="24sp" android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.003"/>
    <ProgressBar
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="0dp"
            android:layout_height="64dp"
            android:id="@+id/SammieBar" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/Child1" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.0" app:layout_constraintVertical_bias="0.0"
            android:progressTint="@color/colorPrimaryDark" android:max="5" android:progress="2"
            android:layout_marginBottom="40dp"/>
    <ProgressBar
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="0dp"
            android:layout_height="64dp"
            android:id="@+id/JohnBar" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/Child1" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.0" app:layout_constraintVertical_bias="0.244"
            android:progressTint="@color/colorPrimaryDark" android:max="6" android:progress="3"
            android:layout_marginBottom="40dp"/>
    <ProgressBar
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="0dp"
            android:layout_height="64dp"
            android:id="@+id/EmmaBar" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/Child1" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.0" app:layout_constraintVertical_bias="0.467"
            android:progressTint="@color/colorPrimaryDark" android:max="6" android:progress="5"
            android:layout_marginBottom="40dp"/>
    <TextView
            android:text="@string/john"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Child2" android:textSize="24sp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginTop="4dp" app:layout_constraintTop_toBottomOf="@+id/SammieBar"
            app:layout_constraintHorizontal_bias="0.023" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/JohnBar"/>
    <TextView
            android:text="@string/emma"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Child3" android:textSize="24sp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginTop="124dp" app:layout_constraintTop_toBottomOf="@+id/SammieBar"
            app:layout_constraintHorizontal_bias="0.024" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/EmmaBar"/>
    <TextView
            android:text="@string/family_s_task_progression"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView3" android:textSize="30sp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.488"
            app:layout_constraintVertical_bias="0.011"/>


</android.support.constraint.ConstraintLayout>