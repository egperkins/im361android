<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <TextView
            android:text="@string/family_s_task_progression"
            android:layout_width="wrap_content"
            android:layout_height="39dp"
            android:id="@+id/TaskProgression"
            android:textSize="30sp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.488"
            app:layout_constraintVertical_bias="0.011"/>
    <Button
            android:text="@string/add_task"
            android:layout_width="106dp"
            android:layout_height="111dp"
            android:id="@+id/button" android:textColor="@color/colorBackground"
            android:background="@color/colorAccent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginBottom="32dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.82"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.9"/>
    <Button
            android:text="@string/view_tasks"
            android:layout_width="106dp"
            android:layout_height="111dp"
            android:id="@+id/button2" android:textColor="@color/colorBackground"
            android:background="@color/colorAccent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginBottom="32dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.238"
            android:layout_marginTop="32dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.895"/>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="385dp"
            android:layout_height="424dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/TaskProgression" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/button2" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintVertical_bias="0.036">
        <TextView
                android:text="@string/sammie"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/Sammie"
                android:textSize="24sp" tools:layout_editor_absoluteY="410dp" tools:layout_editor_absoluteX="8dp"/>
        <ProgressBar
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:id="@+id/SammieBar"
                android:progressTint="@color/colorPrimaryDark" android:max="5" android:progress="2"
                tools:layout_editor_absoluteY="452dp" tools:layout_editor_absoluteX="0dp"/>
        <TextView
                android:text="@string/john"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/John" android:textSize="24sp"
                tools:layout_editor_absoluteY="281dp" tools:layout_editor_absoluteX="8dp"/>
        <ProgressBar
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:id="@+id/JohnBar"
                android:progressTint="@color/colorPrimaryDark" android:max="6" android:progress="3"
                tools:layout_editor_absoluteY="333dp" tools:layout_editor_absoluteX="0dp"/>
        <TextView
                android:text="@string/emma"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/Emma" android:textSize="24sp"
                tools:layout_editor_absoluteY="131dp" tools:layout_editor_absoluteX="8dp"/>
        <ProgressBar
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:id="@+id/EmmaBar"
                android:progressTint="@color/colorPrimaryDark" android:max="6" android:progress="5"
                tools:layout_editor_absoluteY="177dp" tools:layout_editor_absoluteX="130dp"/>
    </LinearLayout>


</android.support.constraint.ConstraintLayout>